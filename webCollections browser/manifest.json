{
    "manifest_version": 2,
    "name": "osuWebCollections",
    "version": "0.1",
    "description": "wip webCollections addon",
    "icons": {
        "48": "icons/webCollections.svg",
        "96": "icons/webCollections.svg"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "webcollections@shaddy.dev",
          "strict_min_version": "57.0"
        }
      },
    "permissions": [
        "nativeMessaging",
        "downloads",
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_icon": "icons/webCollections.svg",
        "default_title": "webCollections"
    },
    "options_ui": {
        "page": "src/options/options.html",
        "chrome_style": true,
        "browser_style": true
    },
    "background": {
        "scripts": ["src/background/background.ts"]
    },
    "content_scripts": [
        {
            "matches": ["*://osu.ppy.sh/*"],
            "js": ["src/content/content-script.ts"]
        }
    ]
}
